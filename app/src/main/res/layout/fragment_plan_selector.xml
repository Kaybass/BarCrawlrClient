<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/new_plan_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gol_recycler_view"
        android:layout_alignRight="@+id/gol_recycler_view"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:foreground="@android:drawable/ic_input_add" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/connect_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gol_recycler_view"
        android:layout_alignLeft="@+id/gol_recycler_view"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:foreground="@android:drawable/ic_menu_more" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gol_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
